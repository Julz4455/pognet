extends layout

block content
  -data = data || {}
  div(class='drawer p-2')
    div(class='drawer-top')
      button(class='mx-1 drawer-close text-2xl px-2 pr-3' onclick='closeDrawer()') &times;
      p(class='drawer-title inline text-2xl font-black') PogNet
    div(class='drawer-main flex flex-col text-center justify-between')
      a(class='px-2 m-2 text-lg font-light tracking-widest text-gray-200' href='/') Home
      a(class='px-2 m-2 text-lg font-light tracking-widest text-gray-200' href='/new/post') New Post
      a(class='px-2 m-2 text-lg font-light tracking-widest text-gray-200' href='/new/board') New Board
      a(class='px-2 m-2 text-lg font-light tracking-widest text-gray-200' id="settings-mobile" href='/settings/me') Settings
      button(class='px-2 m-2 text-lg font-light tracking-widest text-gray-200' id='signout' onclick='signout()') Sign Out
  div(class='nav')
    div(class='nav-full')
      div(class='nav-items flex justify-between')
        p(class='px-2 m-2 font-black tracking-widest text-gray-200 hover:text-gray-300') PogNet
        a(class='px-2 m-2 font-light tracking-widest text-gray-200 hover:text-gray-300' href='/') Home
        a(class='px-2 m-2 font-light tracking-widest text-gray-200 hover:text-gray-300' href='/new/post') New Post
        a(class='px-2 m-2 font-light tracking-widest text-gray-200 hover:text-gray-300' href='/new/board') New Board
        a(class='px-2 m-2 font-light tracking-widest text-gray-200 hover:text-gray-300' id='settings' href='/settings/me') Settings
        div(class='px-2 m-2 spacer')
        div(class='px-2 m-2')
          div(class='theme-switch-wrapper')
            label(class='theme-switch' for='checkbox')
              input(type='checkbox' id='checkbox')
              div(class='slider round')
        div(class='px-2 m-2 spacer')
        button(class='px-2 m-2 font-light tracking-widest text-gray-200 hover:text-gray-300 border-transparent hover:border-white' id="signout-full" onclick='signout()') Sign Out
    div(class='nav-mobile')
      div(class='nav-items flex justify-between')
        button(class='flex items-center px-3 py-2 border rounded text-gray-200 border-gray-400 hover:text-white hover:border-white' onclick='showDrawer()')
          svg(class='fill-current h-3 w-3' viewBox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
            title Menu
            path(d='M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z')
        p(class='text-2xl text-center font-heavy') PogNet
  input(class="user_id-field" style='display:none' value=user_id)
  p(class="form-registration text-2xl")= form_title
  if errors
    ul.errors
      for error in errors
        li= error.msg
  form(action="/signup" method="POST" class="form-registration")
    label(for="username") Username:
    input(
      type="text"
      id="username"
      name="username"
      class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
      value=data.username
    )

    label(for="email") Email:
    input(
      type="email"
      id="email"
      name="email"
      class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
      value=data.email
    )

    label(for="password") Password:
    input(
      type="password"
      id="password"
      name="password"
      class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
      value=data.password
    )

    input(type="submit", id="submit", name="submit", class="btn font-bold py-2 px-4 rounded")
  a(href='/login' class='form-registration underline text-blue-500 hover:text-blue-700' style='margin-top: -25px;') Already have an account? Log In
  script(src='/js/buttons.js')
  script(src='/js/nav-controls.js')
  if redir
    script(src='/js/apply-redir.js')