extends layout

block content
	div(class='drawer p-2')
		div(class='drawer-top')
			button(class='mx-1 drawer-close text-2xl px-2 pr-3' onclick='closeDrawer()') &times;
			p(class='drawer-title inline text-2xl font-black') PogNet
		div(class='drawer-main flex flex-col text-center justify-between')
			a(class='px-2 m-2 text-lg font-light tracking-widest text-gray-200' href='/') Home
			a(class='px-2 m-2 text-lg font-light tracking-widest text-gray-200' href='/new/post') New Post
			a(class='px-2 m-2 text-lg font-light tracking-widest text-gray-200' href='/new/board') New Board
			a(class='px-2 m-2 text-lg font-light tracking-widest text-gray-200' id="settings-mobile" href='/settings/me') Settings
			button(class='px-2 m-2 text-lg font-light tracking-widest text-gray-200' id='signout' onclick='signout()') Sign Out
	div(class='nav')
		div(class='nav-full')
			div(class='nav-items flex justify-between')
				p(class='px-2 m-2 font-black tracking-widest text-gray-200 hover:text-gray-400 nav-title') PogNet
				a(class='px-2 m-2 font-light tracking-widest text-gray-200 hover:text-gray-400' href='/') Home
				a(class='px-2 m-2 font-light tracking-widest text-gray-200 hover:text-gray-400' href='/new/post') New Post
				a(class='px-2 m-2 font-light tracking-widest text-gray-200 hover:text-gray-400' href='/new/board') New Board
				a(class='px-2 m-2 font-light tracking-widest text-gray-200 hover:text-gray-400' id='settings' href='/settings/me') Settings
				div(class='px-2 m-2 spacer')
				div(class='px-2 m-2')
					div(class='theme-switch-wrapper')
						label(class='theme-switch' for='checkbox')
							input(type='checkbox' id='checkbox')
							div(class='slider round')
				div(class='px-2 m-2 spacer')
				button(class='px-2 m-2 font-light tracking-widest text-gray-200 hover:text-gray-400 border-transparent hover:border-white' id="signout-full" onclick='signout()') Sign Out
		div(class='nav-mobile')
			div(class='nav-items flex justify-between')
				button(class='flex items-center px-3 py-2 border rounded text-gray-200 border-gray-400 hover:text-white hover:border-white' onclick='showDrawer()')
					svg(class='fill-current h-3 w-3' viewBox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
						title Menu
						path(d='M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z')
				p(class='text-2xl text-center font-heavy nav-title') PogNet
	// - Settings Stuff
	p(class='settings-title text-4xl') BOARD's settings
	div(class='settings-section picture-section md:flex p-6')
		img(class='settings-picture h-32 w-32 md:h-32 md:w-32 rounded-full mx-auto md:mx-0 md:mr-6')
		div(class='text-left')
			p(class='text-xl') This is your board's icon. Want to change it?
			input(type='file' accept='image/*' class='icon-change border bg-transparent font-bold py-2 px-4 rounded mt-2')
			br
			button(class='btn settings-submit font-bold py-2 px-4 rounded icon-submit' onclick='submitPhoto()') Save Icon
			button(class='btn settings-submit font-bold py-2 px-4 rounded icon-reset ml-2' onclick='resetPhoto()') Reset Icon
	script(src='/js/board-settings.js')
	script(src='/js/board-settings-setup.js')
	script(src='/js/nav-controls.js')
